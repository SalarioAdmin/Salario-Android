<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="io.salario.app.ui.fragments.IntroductionFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/intro_animation"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="welcomeLottie.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_regular"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/intro_title_text"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/intro_animation" />

    <TextView
        android:id="@+id/intro_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_regular"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/intro_subtitle_text"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/intro_title" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/filled_button_bg"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/intro_sign_up_btn_text"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/sign_in_btn" />

    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outlined_button_bg"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/intro_sign_in_btn_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>